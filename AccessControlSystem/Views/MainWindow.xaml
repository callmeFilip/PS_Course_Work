<Window x:Class="CardAccessControl.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CardAccessControl.ViewModels"
        Title="Card Access Control" Height="350" Width="525">

    <Grid>
        <DataGrid ItemsSource="{Binding AccessTimes}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*"/>
                <DataGridTextColumn Header="Card ID" Binding="{Binding CardId}" Width="Auto"/>
                <DataGridTextColumn Header="Card Reader ID" Binding="{Binding CardReaderId}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
