<Page x:Class="AccessControlSystem.Views.CardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Cards">

    <DockPanel Margin="10">

        <!-- toolbar -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top">

            <!-- owner drop‑down -->
            <ComboBox x:Name="UserBox"
                      Width="140"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      VerticalAlignment="Center"
                      Margin="0,0,8,0"/>

            <!-- card number -->
            <TextBox x:Name="CardNumberBox"
                     Width="100"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     ToolTip="Card number"/>

            <!-- level -->
            <TextBox x:Name="CardLevelBox"
                     Width="40"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     ToolTip="Level"/>

            <Button Content="Add"
                    Click="Add_Click"
                    Margin="0,0,8,0"/>

            <Button Content="Delete Selected"
                    Click="Delete_Click"/>

            <Button Content="Back"
                    Margin="16,0,0,0"
                    Click="Back_Click"/>
        </StackPanel>

        <!-- list -->
        <DataGrid x:Name="CardsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Card ID"
                                    Binding="{Binding Id}"
                                    Width="80"/>
                <DataGridTextColumn Header="Number"
                                    Binding="{Binding CardNumber}"
                                    Width="120"/>
                <DataGridTextColumn Header="Level"
                                    Binding="{Binding AccessLevel}"
                                    Width="60"/>
                <DataGridTextColumn Header="Owner"
                                    Binding="{Binding User.Name}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
